@model TodoItem

@{
	ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
	<div class="form-horizontal">
		<h4>TodoItem</h4>
		<hr />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="Id" />
		<div class="form-group">
			<label asp-for="Name" class="col-md-2 control-label"></label>
			<div class="col-md-4">
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger" />
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Details" class="col-md-2 control-label"></label>
			<div class="col-md-10">
				<input asp-for="Details" class="form-control" />
				<span asp-validation-for="Details" class="text-danger" />
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<div class="checkbox">
					<input asp-for="IsComplete" />
					<label asp-for="IsComplete"></label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="ModifiedTimeUTC" class="col-md-2 control-label">Modified</label>
			<div class="col-md-10">
				<input type="datetime" value="@Model.ModifiedTimeUTC" readonly />
			</div>
		</div>
		<div class="form-group">
			<label asp-for="CreatedTimeUTC" class="col-md-2 control-label">Created</label>
			<div class="col-md-10">
				<input type="datetime" value="@Model.CreatedTimeUTC" readonly />
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</div>
	</div>
</form>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
