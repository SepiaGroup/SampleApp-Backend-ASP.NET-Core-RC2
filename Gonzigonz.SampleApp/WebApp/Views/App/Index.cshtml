@{
	ViewData["AppName"] = "Gonzigonz SampleApp";
}
@model IEnumerable<Gonzigonz.SampleApp.Domain.TodoItem>
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Gonzigonz</title>
</head>
<body>
	<h1>Welcome</h1>
	<h3>Todo Items</h3>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Id)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.IsComplete)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.CreatedTime)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ModifiedTime)
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsComplete)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CreatedTime)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ModifiedTime)
					</td>
				</tr>
			}
		</tbody>
	</table>
</body>
</html>